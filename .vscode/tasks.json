{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build VoxyEngine",
            "type": "shell",
            "command": "C:\\Program Files\\CMake\\bin\\cmake.exe",
            "args": [
                "--build",
                "${workspaceFolder}/build/Debug",
                "--config",
